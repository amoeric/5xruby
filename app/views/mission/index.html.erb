<h1>這是任務首頁</h1>
<%= link_to  "前往新增任務", new_mission_path %>
<% @missions.each do |mission|%>
    <div class="mission">
        <div>任務名：<%= mission.name %></div>
        <div>任務內容：<%= mission.content %></div>
        <div><%= link_to "修改內容", edit_mission_path(mission)%></div>
        <div><%= link_to "刪除任務", mission,method:'DELETE',data:{confirm:"確認刪除？"}%></div>
    </div>
<%end%>